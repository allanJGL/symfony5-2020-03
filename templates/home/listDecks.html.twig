<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
{% block body %}

    <div class="container">
        <div class="row">
            {% for deck in decks %}
                <span><a href="{{ path('editDeck', {deckId: deck.id}) }}">{{ deck.name }}</a></span>
            {% endfor %}
        </div>
    </div>

    <script type="text/javascript">

        $(document).ready(function () {
            $('span a').click(function (e) {
                e.preventDefault();
                $('nav a').removeClass('active');
                $(this).addClass('active');
                $("#pageContent").load($(this).attr('href'));
            });
        });

    </script>
{% endblock %}
</body>
</html>